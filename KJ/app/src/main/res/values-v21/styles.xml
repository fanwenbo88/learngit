<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTheme" parent="@style/Base.Widget.AppCompat.Toolbar">
        <item name="android:colorPrimary">@android:color/holo_red_dark</item>
        <item name="vpiTabPageIndicatorStyle">@style/MyWidget.TabPagerIndicator</item>
        <item name="android:animationDuration">5000</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="MyWidget.TabPagerIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">@style/MyTextAppearance.TabPagerIndicator</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="MyTextAppearance.TabPagerIndicator" parent="Widget">
        <item name="android:textStyle">bold</item>
    </style>
</resources>